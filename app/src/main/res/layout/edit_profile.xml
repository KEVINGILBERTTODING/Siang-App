<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black2"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/popsem"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Edit Profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Penyelia"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popmed"/>

            <EditText
                android:id="@+id/etNamaPenyelia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/popmed"
                android:padding="11dp"
                android:background="@drawable/container_edittext1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popmed"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/popmed"
                android:padding="11dp"
                android:background="@drawable/container_edittext1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama "
                android:layout_marginTop="20dp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popmed"/>

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/popmed"
                android:padding="11dp"
                android:background="@drawable/container_edittext1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Rumah"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popmed"/>

            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/popmed"
                android:padding="11dp"
                android:background="@drawable/container_edittext1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asal Sekolah"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popmed"/>

            <EditText
                android:id="@+id/etAsalSekolah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/popmed"
                android:padding="11dp"
                android:background="@drawable/container_edittext1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Sekolah"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popmed"/>

            <EditText
                android:id="@+id/etAlamatSekolah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/popmed"
                android:padding="11dp"
                android:background="@drawable/container_edittext1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jurusan"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popmed"/>

            <EditText
                android:id="@+id/etJurusan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/popmed"
                android:padding="11dp"
                android:background="@drawable/container_edittext1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Induk Siswa / Mahasiswa"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popmed"/>

            <EditText
                android:id="@+id/etNim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/popmed"
                android:padding="11dp"
                android:background="@drawable/container_edittext1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Telepon"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popmed"/>

            <EditText
                android:id="@+id/etTelepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:inputType="number"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/popmed"
                android:padding="11dp"
                android:background="@drawable/container_edittext1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/popmed"/>

            <EditText
                android:id="@+id/etFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:inputType="number"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/popmed"
                android:padding="11dp"
                android:background="@drawable/container_edittext1"/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:id="@+id/btnEdit"
                android:layout_marginTop="20dp"/>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>